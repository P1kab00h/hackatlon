{% extends 'base.html.twig' %}

{% block title %}Randonnée{% endblock %}

{% block body %}
    <h1>Randonnée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Difficultée</th>
                <td>
                    {% if hike.difficulty.level is defined %}
                    {{ hike.difficulty.level }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ hike.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hike.Content }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ hike.length }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ hike.duration }}</td>
            </tr>
            <tr>
                <th>Dénivelée positif</th>
                <td>{{ hike.elevationGain }}</td>
            </tr>
            <tr>
                <th>Dénivelée négatif</th>
                <td>{{ hike.elevationLoss }}</td>
            </tr>
            <tr>
                <th>Coordonnées GPS</th>
                <td>{{ hike.gpsCoordonate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hike_index') }}">Retour à la liste</a>

    <a href="{{ path('app_hike_edit', {'id': hike.id}) }}">édition</a>

    {{ include('hike/_delete_form.html.twig') }}
{% endblock %}
